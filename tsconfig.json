		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"outDir": "lib",
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "ES2021"
	},
	"include": ["src"],
	"exclude": ["node_modules", "src/tests/vendor"]
}
